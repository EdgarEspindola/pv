<% new_product = @add_product[:new] %>
<% product = @add_product[:product] %>

<% if new_product %>
  $("#header-table-sales").after("<%= j render('sales/product_sale', product: product) %>");
<% else %>
  $($("#sale_product_<%= product.id %> td")[2]).html("<%= product.quantity %>");
  $($("#sale_product_<%= product.id %> td")[4]).html("<%= number_to_currency product.total %>");
<% end %>

$('#total_cost_sales').html("<%= j render('sales/totals_costs', total_sales: @total_sales) %>");
