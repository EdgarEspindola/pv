<div id="generate_service_note_url">
  <% unless @service.paid %>
    <%= link_to new_equipment_customer_path(service_id: @service.id), class: 'link-hover', data: {remote: true, disable_with: 'Accediendo...'} do %>
      <i class="fa fa-fw fa-plus-square" style="font-size: 2.2rem;"></i>
      Abrir Registro
      <% end %>
  <% end %>
  <% unless @service.equipment_customers.blank? %>
    <%= render 'shared/service_note', url_report: generate_note_service_path(@service, format: 'pdf') %>
  <% end %>  
</div>
