<div class="col-md-12">
  <% if printing_products.present? %>

    <% printing_products.each do |printing_product| %>
      <% image = image_tag(printing_product.imagen_url, class: "img-fluid img-thumbnail img-responsive") %>
      <% title = label_tag printing_product.name, nil, style: "text-align: center; display: block;", class: "background-color-carousel" %>
      <%= link_to(image+title, printing_product.imagen_url,
                  data: { toggle: "lightbox",
                          gallery: "example-gallery",
                          title: printing_product.name,
                          footer: "<button data-behavior='select-image'
                                    data-type='printing-product'
                                    data-printing-product-id='#{printing_product.id}'
                                    data-image-url='#{printing_product.imagen_url}'
                                    data-product-code='#{printing_product.code}'
                                    data-product-name='#{printing_product.name}'
                                    data-product-type='#{printing_product.product_type}'
                                    class='pull-right'>Seleccionar</button>",
                  },
                  class: "col-sm-3") %>
    <% end %>

  <% else %>
    <h2>Productos no encontrados</h2>
  <% end %>
</div>