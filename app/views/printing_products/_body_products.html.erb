  <% @printing_products.each do |printing_product, index| %>
  <tr>
    <td><%= @index %></td>
    <td><%= printing_product.code %></td>
    <td><%= printing_product.name %></td>
    <td><%= number_to_currency printing_product.purchase_price %></td>
    <td><%= number_to_currency printing_product.sale_price %></td>
    <td><%= printing_product.sale_unit %></td>
    <td><%= printing_product.stock %></td>
    <td><%= "#{printing_product.contains} #{printing_product.contain_unit}" %></td>
