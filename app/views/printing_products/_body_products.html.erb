    <td style="width: 1px;"><%= link_to 'Actualizar', edit_printing_product_path(printing_product), class: 'btn btn-edit' %></td>
    <td style="width: 1px;"><%= link_to 'Eliminar', printing_product, method: :delete, class: 'btn btn-danger', data: { confirm: '¿Está usted seguro?' } %></td>
