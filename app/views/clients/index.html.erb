<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header text-center">
        <h3 class="box-title title-catalog">Clientes</h3>
        <%= link_to 'Registrar', new_client_path, class: "btn btn-info pull-right" %>
      </div>

      <div class="box-body table-responsive no-padding">
        <%= render 'shared/search', id: 'search-clients',
          placeholder: 'Buscar por nombre',
          remote_url: '/clients/search' %>
        <table class="table table-responsive table-hover table-condensed table-striped" id="clients_table">
          <%= render 'body_clients' %>
        </table>
      </div>

    </div>
  </div>
</div>

<%= render 'shared/paginate', elements_paginate: @clients %>
