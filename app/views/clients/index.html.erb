<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header text-center">
        <h3 class="box-title title-catalog">Clientes</h3>
        <%= link_to 'Registrar', new_client_path, class: "btn btn-info pull-right" %>

      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-responsive table-hover table-condensed table-striped">
          <tbody>
            <tr>
              <th>No.</th>
              <th>Nombre</th>
              <th>Télefono Fijo</th>
              <th>Télefono Movil</th>
              <th>Descripción</th>
              <th></th>
              <th></th>
            </tr>
            <% @clients.each_with_index do |client, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= client.formal_name %></td>
                <td><%= client.home_phone %></td>
                <td><%= client.mobile_phone %></td>
                <td><%= client.address %></td>
                <td style="width: 1px;"><%= link_to 'Actualizar', edit_client_path(client), class: "btn btn-edit" %></td>
                <td style="width: 1px;"><%= link_to 'Eliminar', client, method: :delete, class: "btn btn-danger", data: { confirm: '¿Está usted seguro?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
