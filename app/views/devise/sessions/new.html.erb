<div class="col-sm-6 offset-md-3">
  <div class="card">
    <div class="card-header">
      <h2 class="text-info">Iniciar Sesión</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% unless flash[:alert].blank? %>
      <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <div class="form-group">
        <label for="exampleInputName">Usuario</label>
        <%= f.text_field :username, autofocus: true, placeholder: "Proporciona tu nombre de usuario", class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <label for="exampleInputName">Contraseña</label>
        <%= f.password_field :password, placeholder: "Proporciona tu contraseña", class: "form-control", required: true %>
      </div>

      <%#= f.input :username, input_html: { autofocus: true } %>
      <%#= f.input :password, input_html: { autofocus: true } %>

      <% if devise_mapping.rememberable? -%>
      <div class="form-group>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Acceder", class: "btn btn-primary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
