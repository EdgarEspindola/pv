<%= form_for(@new_support) do |f| %>
  <%= f.hidden_field :equipment_customer_id, value: @equipment_customer.id %>
  <div class="form-group">
    <label>Descripci√≥n del servicio</label>
    <%= f.text_area :description, class: "form-control", rows: 3, required: true %>
    <div class="invalid-feedback"><%= @new_support.errors[:description].first %></div>
  </div>
  <div class="form-row">
    <div class="col-md-6">
      <div class="form-group">
        <label>Fecha de Ingreso</label>
        <%= f.text_field :date_of_entry, class: "form-control", required: true %>
        <div class="invalid-feedback"><%= @new_support.errors[:date_of_entry].first %></div>
      </div>
      <div class="form-group">
        <label>Tipo de pago</label>
        <%= f.collection_select :payment_type_id, PaymentType.all, :id, :name, { prompt: "Seleccione un tipo de pago" }, class: "form-control", required: true %>
        <div class="invalid-feedback"><%= @new_support.errors[:payment_type_id].first %></div>
      </div>
      <div class="form-group">
        <label>Tipo de cliente</label>
        <%= f.collection_select :client_type_id, ClientType.all, :id, :name, { prompt: "Seleccione un tipo de cliente" }, class: "form-control", required: true %>
        <div class="invalid-feedback"><%= @new_support.errors[:client_type_id].first %></div>
      </div>
      <div class="form-group">
        <label>Mano de obra</label>
        <%= f.text_field :worforce, class: "form-control", required: true %>
        <div class="invalid-feedback"><%= @new_support.errors[:worforce].first %></div>
      </div>
      <div class="form-group">
        <label>Descuento</label>
        <%= f.text_field :discount, class: "form-control", required: true %>
        <div class="invalid-feedback"><%= @new_support.errors[:discount].first %></div>
      </div>
      <div class="form-group">
        <label>Fecha de salida</label>
        <%= f.text_field :departure_date, class: "form-control", required: true %>
        <div class="invalid-feedback"><%= @new_support.errors[:departure_date].first %></div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label>Refacciones usadas</label>
        <input type="password" class="form-control" placeholder="Refacciones usadas">
      </div>
    </div>
  </div>
  <%= f.submit "Pagar", class: "btn btn-primary" %>
<% end %>
