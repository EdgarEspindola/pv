<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header text-center">
        <h3 class="box-title title-catalog">Modelos</h3>
          <%= link_to 'Registrar', new_equipment_model_path, class: "btn btn-info pull-right" %>

      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-responsive table-hover table-condensed table-striped">
          <tbody>
            <tr>
              <th>No.</th>
              <th>Nombre</th>
              <th>Descripción</th>
              <th></th>
              <th></th>
            </tr>
            <% @equipment_models.each_with_index do |equipment_model, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= equipment_model.name %></td>
                <td><%= sanitize equipment_model.description %></td>
                <td style="width: 1px;"><%= link_to 'Actualizar', edit_equipment_model_path(equipment_model), class: 'btn btn-edit' %></td>
                <td style="width: 1px;"><%= link_to 'Eliminar', equipment_model, method: :delete, class: 'btn btn-danger', data: { confirm: '¿Está usted seguro?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
