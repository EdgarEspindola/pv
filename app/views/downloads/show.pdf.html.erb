<div class="panel" style="height: auto; border: 1px solid red;">
  <div class="row">
    <div class="col-xs-5">
      <div class="form-group">
        <label class="col-sm-5 control-label">Cobrado por</label>
        <div class="col-sm-7 form-control"><%= @service.employee.formal_name %></div>
      </div>
      <div class="form-group">
        <label class="col-sm-5 control-label">Fecha de Ingreso</label>
        <div class="col-sm-7 form-control"><%= @service.date_of_entry %></div>
      </div>
      <div class="form-group">
        <label class="col-sm-5 control-label">Tipo de Pago</label>
        <div class="col-sm-7 form-control"><%= @service.payment_type.name %></div>
      </div>
      <div class="form-group">
        <label class="col-sm-5 control-label">Mano de Obra</label>
        <div class="col-sm-7 form-control"><%= number_to_currency @service.worforce %></div>
      </div>
      <div class="form-group">
        <label class="col-sm-5 control-label">Descuento</label>
        <div class="col-sm-7 form-control"><%= number_to_percentage @service.discount, precision: 2 %></div>
      </div>
      <div class="form-group">
        <label class="col-sm-5 control-label">Fecha de Salida</label>
        <div class="col-sm-7 form-control" style="margin-bottom: 10px;"><%= @service.departure_date %></div>
      </div>

      <% if @service.image_client_url.present? %>
            <%= wicked_pdf_image_tag(@service.image_client_url.to_s, class: "img-thumbnail img-responsive center-block") %>
      <% end %>

    </div>

    <div class="col-xs-7">
      <div class="form-group text-center" >
        <label style="font-size:36px; color:#00a65a !important; background-color: grey;">Refacciones usadas</label>
      </div>
      <table class="table table-striped">
        <thead  style="background-color: grey;">
          <tr>
            <th style="color:blue !important;">#</th>
            <th style="color:blue !important;">Nombre</th>
            <th style="color:blue !important;">Descripci√≥n</th>
            <th style="color:blue !important;">Cantidad</th>
            <th style="color:blue !important;">Precio</th>
          </tr>
        </thead>
        <tbody id="spare_parts_used_by_@service">
          <% unless @service.service_spare_parts.blank? %>
          <%= render partial: "spare_parts/spare_part", collection: @service.service_spare_parts %>
          <% end %>
        </tbody>
      </table>

      <div class="table-responsive" id="total_to_paid_by_spare_parts_used_by_@service">
        <% unless @service.service_spare_parts.blank? %>
        <%= render "services/totals_costs", totals: Service.generate_totals(@service.service_spare_parts, @service.worforce, @service.discount) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
