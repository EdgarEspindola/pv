<div class="container-fluid">
  <div class="row alwaysbreak m-l-100 m-r-100">
    <div class="col-xs-8 m-t-150">
      <div class="row">
        <div class="col-xs-2">
          <h1><strong>Nombre: </strong></h1>
        </div>
        <div class="col-xs-4">
          <h1><%= @quotation_printing.client.formal_name %></h1>
        </div>
        <div class="col-xs-2">
          <h1><strong>Orden: </strong></h1>
        </div>
        <div class="col-xs-4">
          <h1><%= "%04d" % @quotation_printing.number_folio %></h1>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2">
          <h1><strong>Fecha: </strong></h1>
        </div>
        <div class="col-xs-10">
          <h1><%= @quotation_printing.updated_at.strftime("%d/%m/%Y") %></h1>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2">
          <h1><strong>Fecha Entrega Borrador: </strong></h1>
        </div>
        <div class="col-xs-4">
          <h1><%= @quotation_printing.draft_delivery_date %></h1>
        </div>
        <div class="col-xs-2">
          <h1><strong>Fecha Entrega Invitación: </strong></h1>
        </div>
        <div class="col-xs-4">
          <h1><%= @quotation_printing.delivery_date %></h1>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2">
          <h1><strong>Le atendió: </strong></h1>
        </div>
        <div class="col-xs-10">
          <h1><%= @quotation_printing.user.formal_name %></h1>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2">
          <h1><strong>Cantidad: </strong></h1>
        </div>
        <div class="col-xs-4">
          <h1><%= @quotation_printing.total_pieces %></h1>
        </div>
        <div class="col-xs-2">
          <h1><strong>Total: </strong></h1>
        </div>
        <div class="col-xs-4">
          <h1><%= number_to_currency @quotation_printing.total_cost %></h1>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-2">
          <h1><strong>A/C: </strong></h1>
        </div>
        <div class="col-xs-10">
          <h1><%= number_to_currency @quotation_printing.payment %></h1>
        </div>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="row">
        <div class="col-xs-12">
          <% logo_path = image_url("logomichel2019-08-30.jpeg") %>
          <%= wicked_pdf_image_tag(logo_path, style: "width: 100%;") %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-4">
          <h1><strong>Súper Creativas, Súper O</strong></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-4 text-right">
          <% logo_path = image_url("facebook-transparent-icon-9.jpg") %>
          <%= wicked_pdf_image_tag(logo_path, style: "width: 60%; height: 100px;") %>
        </div>
        <div class="col-xs-8">
          <h1><strong>Invitaciones Michel</strong></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-4">
          <h1><strong>Tel: 530 09 29</strong></h1>
        </div>
      </div>
    </div>
  </div>

  <div class="row m-t-150 m-l-100 m-r-100" style="height: 1000px;">
    <div class="col-xs-6 text-center">
      <div class="col-xs-12 m-t-20 m-b-20">
        <h1><strong>CONTENIDO #</strong></h1>
      </div>
      <div class="col-xs-12">
        <% logo_path = @quotation_printing.content_for_invitation.image_url %>
        <%= wicked_pdf_image_tag(logo_path, style: "width: 100%; height: 100%") %>
      </div>
    </div>
    <div class="col-xs-6 text-center">
      <div class="col-xs-12 m-t-20 m-b-20">
        <h1><strong>INVITACIÓN #</strong></h1>
      </div>
      <div class="col-xs-12">
        <% logo_path = @quotation_printing.invitation.imagen_url %>
        <%= wicked_pdf_image_tag(logo_path, style: "width: 100%; height: 100%;") %>
      </div>
    </div>
  </div>

  <div class="row m-l-100 m-r-100">
    <div class="col-xs-12 m-t-150" style="height: 500px; background-color: rgba(255, 255, 255, 0.5)">
      <h1><strong><%= @quotation_printing.description %></strong></h1>
    </div>

    <div class="col-xs-12 m-t-100" style="height: 500px; background-color: rgba(255, 255, 255, 0.5)">
      <h1><strong><%= @quotation_printing.description_adjust_design %></strong></h1>
    </div>
  </div>

</div>
