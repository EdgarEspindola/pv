<div class="form-group">
  <div class="col-sm-12 text-center">
    <%= file_field_tag "quotation_printing[imagen]", class: "form-control", accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
    <% if quotation_printing.new_record? %>
      <% if quotation_printing.invitation.present? %>
        <% src = quotation_printing.invitation.imagen_url %>
        <% hidden = "" %>
      <% else %>
        <% src = "" %>
        <% hidden = "hidden" %>
      <% end %>
    <% else %>
      <% if quotation_printing.imagen_url != nil %>
        <% src = quotation_printing.imagen_url %>
        <% hidden = "" %>
      <% else %>
        <% src = quotation_printing.invitation.new_record? ? "#" : quotation_printing.invitation.imagen_url %>
        <% hidden = quotation_printing.invitation.new_record? ? "hidden" : "" %>
      <% end %>
    <% end %>
    <img id="img_prev_invitation" width=200 height=200 src="<%= src %>" alt="Fotografia" class="img-thumbnail <%= hidden %>"/>
    <br/>
    <%= hidden_field_tag "quotation_printing[imagen_cache]" %>

  </div>
</div>