<div class="col-xs-4" style="display: inline-block; margin-bottom: 5px;">
  <label style="font-size: 18px;">
    <% if check_component %>
      <del style="background-color: gray;">
        <%= check_box_tag "equipment_customer[component_ids][]", component.id, check_component %>
        <%= component.name %>
      </del>
    <% else %>
      <%= check_box_tag "equipment_customer[component_ids][]", component.id, check_component %>
      <%= component.name %>
    <% end %>
  </label>
</div>
