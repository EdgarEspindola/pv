<div class="col-xs-4" style="display: inline-block; margin-bottom: 5px;">
    <% if check_component %>
      <label style="font-size: 18px; background-color: gray;">
        <del>
          <%= check_box_tag "equipment_customer[component_ids][]", component.id, check_component, style: "margin-right: 10px; width: 18px; height: 18px;" %>
          <%= component.name %>
        </del>
      </label>
    <% else %>
      <label style="font-size: 18px;">
        <%= check_box_tag "equipment_customer[component_ids][]", component.id, check_component, style: "margin-right: 10px; width: 18px; height: 18px;" %>
        <%= component.name %>
      </label>
    <% end %>
</div>
