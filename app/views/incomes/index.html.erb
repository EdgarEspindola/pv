<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header text-center">
        <h3 class="box-title title-catalog">Ingresos</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-responsive table-hover table-condensed table-striped">
          <tbody>
            <tr>
              <th>No.</th>
              <th>Cliente</th>
              <th>Fecha-Hora de Cobro</th>
              <th>Cantidad</th>
              <th>Folio</th>
              <th>Cobrado por</th>
            </tr>
            <% @incomes.each_with_index do |income, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= income.client.formal_name %></td>
                <td><%= income.created_at.strftime("%d/%m/%Y - %I:%M %p") %></td>
                <td><%= number_to_currency Service.generate_totals(income.service_spare_parts, income.worforce, income.discount)[:total_final] %></td>
                <td><%= income.folio %></td>
                <td><%= income.employee.formal_name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
