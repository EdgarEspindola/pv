<div class="row" style="margin: 0;">
  <div class="col-xs-12 not-padding">
    <div class="box not-margin not-border">
      <div class="box-header text-center border-tr-header">
        <h3 class="box-title title-catalog">Equipos</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body no-padding">
        <table class="table table-responsive table-hover table-condensed table-striped">
          <tbody>
            <tr class="background-gray border-tr-header">
              <th class="td-header-table">#</th>
              <th class="td-header-table">NOMBRE</th>
              <th class="td-header-table">ESPECIFICACIONES</th>
              <th class="td-header-table"></th>
            </tr>
            <% @equipments.each_with_index do |equipment, index| %>
              <tr>
                <td class="td-content-table"><%= index + 1 %></td>
                <td class="td-content-table"><%= equipment.name %></td>
                <td class="td-content-table"><%= sanitize equipment.specifications %></td>
                <td class="td-content-table" style="text-align: right;">
                  <div class="icon-bar">
                    <%= link_to edit_equipment_path(equipment) do %>
                      <i class="fa fa-fw fa-edit"></i>
                    <% end %>
                    <%= link_to equipment, method: :delete, data: { confirm: '¿Está usted seguro?' } do %>
                      <i class="fa fa-fw fa-remove"></i>
                    <% end %>
                  </div>
                  <%#= link_to 'Actualizar', edit_equipment_path(equipment), class: "btn btn-info" %>
                  <%#= link_to 'Eliminar', equipment, method: :delete, class: "btn btn-danger", data: { confirm: '¿Está usted seguro?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>

  <div class="new-register">
    <%= link_to new_equipment_path do %>
      <i class="fa fa-fw fa-plus"></i>
    <% end %>
  </div>
</div>
