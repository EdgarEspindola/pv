<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header text-center">
        <h3 class="box-title title-catalog">Equipos</h3>
        <%= link_to 'Registrar', new_equipment_path, class: "btn btn-info pull-right" %>

      </div>

      <div class="box-body table-responsive no-padding">
        <%= render 'shared/search', id: 'search-equipments',
          placeholder: 'Buscar por nombre o especificaciones',
          remote_url: '/equipments/search' %>
        <table class="table table-responsive table-hover table-condensed table-striped" id="equipments_table">
          <%= render 'body_equipments' %>
        </table>
      </div>

    </div>
  </div>
</div>

<%= render 'shared/paginate', elements_paginate: @equipments %>
