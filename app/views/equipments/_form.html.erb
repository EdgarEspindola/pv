<%= form_for(@equipment, html: { class: "form-horizontal" }) do |f| %>
  <div class="box-body not-border">
    <div class="form-group <%= 'has-error' unless @equipment.errors[:name].blank? %>">
      <label class="col-sm-3 control-label label-form">Nombre</label>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", required: true %>
        <span><%= @equipment.errors[:name].first %></span>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label label-form">Especificaciones</label>

      <div class="col-sm-8">
        <%= f.text_area :specifications, class: "form-control textarea" %>
        <div class="invalid-feedback"><%= @equipment.errors[:specifications].first %></div>
      </div>
    </div>
  <!-- /.box-body -->
  <div class="box-footer not-border">
    <%= f.submit @equipment.new_record? ? "Ingresar" : "Actualizar", class: "btn btn-info btn-lg btn-block submit-button" %>
  </div>
  <!-- /.box-footer -->
<% end %>
