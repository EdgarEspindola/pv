<!-- header -->
<div class="row">
  <p style="margin: 0; text-align: center;">
    <strong><%= @ticket_partial_sale.header[:title] %></strong>
  </p>
  <p style='margin: 5px 0 0 0; text-align: center;'>
    <strong>Domicilio</strong>
  </p>
  <p style='margin: 0; text-align: center;'>
    <strong><%= @ticket_partial_sale.header[:street] %></strong>
  </p>
  <p style='margin: 0; text-align: center;'>
    <strong><%= @ticket_partial_sale.header[:address] %></strong>
  </p>
  <p style='margin: 0; text-align: center;'>
    <strong><%= @ticket_partial_sale.header[:city] %></strong>
  </p>
  <p style='margin: 5px 0 0 0; text-align: center;'>
    <strong>RFC. <%= @ticket_partial_sale.header[:rfc] %></strong>
  </p>
  <p style="margin: 5px 0 0 0; text-align: center;">
    <strong>Sucursal: <%= @ticket_partial_sale.header[:sucursal] %></strong>
  </p>
</div>
<!-- end_header -->

<div class="row">
  <p style="margin: 5px 0 0 0;">
    <strong><%= @ticket_partial_sale.date %></strong>
  </p>
</div>

<div class="row">
  <div class="col-xs-12" style="margin: 0;">
    <p style="margin: 5px 0;">
      <span style='float: left; width: 50%; display: inline-block;'>
        <strong>Ticket: <%= @ticket_partial_sale.ticket %></strong>
      </span>
    </p>
  </div>
</div>

<div style="clear: both"></div>

<div class="row">
  <div class="col-xs-12" style="margin: 0;">
    <p style="margin: 5px 0 0 0;">
      <span style='float: left; width: 50%; display: inline-block; text-align: right;'>
        <strong>Total M.N.:</strong>
      </span>
      <span style='float: right; width: 50%; display: inline-block; text-align: right;'>
        <strong><%= number_to_currency @ticket_partial_sale.totals[:total] %></strong>
      </span>
    </p>
  </div>
</div>

<div style="clear: both"></div>

<div class="row">
  <div class="col-xs-12" style="margin: 0;">
    <p style="margin: 5px 0 0 0;">
      <span style='float: left; width: 50%; display: inline-block; text-align: right;'>
        <strong>Pago >> <%= @ticket_partial_sale.type_paid %></strong>
      </span>
      <span style='float: right; width: 50%; display: inline-block; text-align: right;'>
        <strong><%= number_to_currency @ticket_partial_sale.totals[:paid] %></strong>
      </span>
    </p>
  </div>
</div>

<div style="clear: both"></div>

<div class="row" style="margin: 0">
  <div class="col-xs-12" style="margin: 0;">
    <p style="margin: 5px 0 0 0;">
      <span style='float: left; width: 50%; display: inline-block; text-align: right;'>
        <strong>Abono:</strong>
      </span>
      <span style='float: right; width: 50%; display: inline-block; text-align: right;'>
        <strong><%= number_to_currency @ticket_partial_sale.payment %></strong>
      </span>
    </p>
  </div>
</div>

<div style="clear: both"></div>

<div class="row" style="margin: 0">
  <div class="col-xs-12" style="margin: 0;">
    <p style="margin: 5px 0 0 0;">
      <span style='float: left; width: 50%; display: inline-block; text-align: right;'>
        <strong>Cambio:</strong>
      </span>
      <span style='float: right; width: 50%; display: inline-block; text-align: right;'>
        <strong><%= number_to_currency @ticket_partial_sale.totals[:change] %></strong>
      </span>
    </p>
  </div>
</div>

<div style="clear: both"></div>

<div class="row" style="margin: 0">
  <div class="col-xs-12" style="margin: 0;">
    <p style="margin: 5px 0 0 0;">
      <span style='float: left; width: 50%; display: inline-block; text-align: right;'>
        <strong>Total Abonos:</strong>
      </span>
      <span style='float: right; width: 50%; display: inline-block; text-align: right;'>
        <strong><%= number_to_currency @ticket_partial_sale.total_payments %></strong>
      </span>
    </p>
  </div>
</div>

<div class="row" style="margin: 0">
  <div class="col-xs-12" style="margin: 0;">
    <p style="margin: 5px 0 0 0;">
      <span style='float: left; width: 50%; display: inline-block; text-align: right;'>
        <strong>Resta:</strong>
      </span>
      <span style='float: right; width: 50%; display: inline-block; text-align: right;'>
        <strong><%= number_to_currency @ticket_partial_sale.difference %></strong>
      </span>
    </p>
  </div>
</div>

<div style="clear: both"></div>

