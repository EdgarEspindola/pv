<header class="main-header">
  <!-- Logo -->
    <%= link_to root_path, class: "logo main-background-color" do %>
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini">
        <%= image_tag 'logo_nota_servicios.jpg', class: "logo-mini", style: "margin: 0 auto; height: 50px; width: 200px; display: block !important;" %>
      </span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg font-logo">
        <%= image_tag 'logo_nota_servicios.jpg', class: "logo-lg font-logo", style: "margin: 0 auto; height: 50px; width: 200px; display: block !important;" %>
      </span>
    <% end %>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top main-background-color">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle white-color" data-toggle="push-menu" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu" style="height: 50px;">
        <ul class="nav navbar-nav user-menu" style="height: 50px;">
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu" style="height: 50px;">
            <a href="#" class="dropdown-toggle user-menu" id="usernamenavbar" data-toggle="dropdown" style="height: 50px;">
              <%= image_tag "img/avatar.png", class: "user-image", alt: "User Image" %>
              <span class="hidden-xs font-username"><%= current_user.formal_name %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header white-color">
                <%= image_tag "img/avatar.png", class: "img-circle", alt: "User Image" %>
                <p class="black-color font-detail-user"><%= current_user.username %></p>
              </li>
              <!-- Menu Footer-->
              <li class="user-footer background-gray">
                <div class="pull-left">
                  <%= link_to "Mi Perfíl", edit_user_registration_path, class: "btn btn-default btn-flat background-white button-perfil-user", data: {load: true} %>
                </div>
                <div class="pull-right">
                  <%= link_to "Cerrar sesión", destroy_user_session_path, class: "btn btn-default btn-flat background-white button-close-sesion-user", method: :delete, data: {load: true} %>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

