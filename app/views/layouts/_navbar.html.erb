    $(document).ready(function() {
      $("ul.dropdown-menu").hover(
        function() {
          $("a#usernamenavbar").addClass( "user-menu-hover" );
        }, function() {
          $("a#usernamenavbar").removeClass( "user-menu-hover" );
        });


