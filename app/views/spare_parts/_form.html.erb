<%= form_for(@spare_part, html: { class: "form-horizontal" }) do |f| %>
  <div class="box-body">
    <div class="form-group <%= 'has-error' unless @spare_part.errors[:code].blank? %>">
      <label class="col-sm-2 control-label">Código</label>
      <div class="col-sm-10">
        <%= f.text_field :code, class: "form-control", required: true, autofocus: true %>
        <span><%= @spare_part.errors[:code].first %></span>
      </div>
    </div>

    <div class="form-group <%= 'has-error' unless @spare_part.errors[:name].blank? %>">
      <label class="col-sm-2 control-label">Nombre</label>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", required: true, autofocus: true %>
        <span><%= @spare_part.errors[:name].first %></span>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Precio</label>
      <div class="col-sm-10">
        <%= f.text_field :price, class: "form-control", required: true, style: "text-align: left !important;" %>
        <div class="invalid-feedback"><%= @spare_part.errors[:price].first %></div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Stock</label>
      <div class="col-sm-10">
        <%= f.text_field :total, class: "form-control", style: "text-align: left !important;" %>
        <div class="invalid-feedback"><%= @spare_part.errors[:total].first %></div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Descripción</label>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control", rows: "10" %>
        <div class="invalid-feedback"><%= @spare_part.errors[:description].first %></div>
      </div>
    </div>
  <!-- /.box-body -->
  <div class="box-footer">
    <%= f.submit "Guardar", class: "btn btn-info pull-right btn-block" %>
  </div>
  <!-- /.box-footer -->
<% end %>
