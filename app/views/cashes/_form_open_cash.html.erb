<%= form_for(:cash, url: cashes_open_cash_path, html: { class: "form-horizontal" }) do |f| %>
  <div class="box-body">

    <div class="form-group">
      <label class="col-sm-2 control-label">Caja</label>
      <div class="col-sm-10">
        <%= f.select :type_cash, @cash.types_cashes, { include_blank: "Seleccione una caja" }, { class: "form-control", required: true, autofocus: true } %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Fecha</label>
      <div class="col-sm-10">
        <%= text_field_tag "open_date", date_time_helper(@cash.open_date), class: "form-control", required: true, readonly: true %>
        <%= f.hidden_field :open_date, value: @cash.open_date.to_s %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Empleado</label>
      <div class="col-sm-10">
        <%= f.text_field :employee, value: @cash.employee.formal_name, class: "form-control", readonly: true %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Importe</label>
      <div class="col-sm-10">
        <%= f.text_field :amount, value: (number_to_currency(@cash.amount)), class: "form-control" %>
      </div>
    </div>

    <div class="box-footer">
      <%= f.submit "Abrir Caja", class: "btn btn-info pull-right btn-block" %>
    </div>

<% end %>

<script>
  $(document).ready(function() {
    $("#cash_amount").inputmask("currency", {
      "prefix": "$",
      "rightAlign": false
    });
  });
</script>
