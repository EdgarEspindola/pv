<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header text-center">
        <h3 class="box-title title-catalog">Categorías</h3>
          <%= link_to 'Registrar', new_category_path, class: "btn btn-info pull-right" %>
      </div>

      <div class="box-body table-responsive no-padding">
        <%= render 'shared/search', id: 'search-categories',
          placeholder: 'Buscar por nombre o descripción',
          remote_url: search_categories_path %>
        <table class="table table-responsive table-hover table-condensed table-striped" id="categories_table">
            <%= render partial: 'body_categories' %>
        </table>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/paginate', elements_paginate: @categories %>
