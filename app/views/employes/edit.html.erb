<div class="col-sm-8 offset-md-2">
  <div class="card">
    <div class="card-header">
      <h2 class="text-info">Editar Perfíl</h2>
    </div>
    <div class="card-body">
      <%= form_for(@user, url: employe_path(@user), html: { method: :put, class: "profile_form" }) do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h5>Por favor, corrige los siguientes errores:</h5>
          </div>
      <% end %>

      <div class="form-group row">
        <label for="exampleInputName" class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-9">
          <%= f.text_field :name, class: "form-control", required: true %>
          <div class="invalid-feedback"><%= @user.errors[:name].first %></div>
        </div>
      </div>

      <div class="form-group row">
        <label for="exampleInputName" class="col-sm-3 col-form-label">Apellido paterno</label>
        <div class="col-sm-9">
          <%= f.text_field :first_name, class: "form-control", required: true %>
          <div class="invalid-feedback"><%= @user.errors[:first_name].first %></div>
        </div>
      </div>

      <div class="form-group row">
        <label for="exampleInputName" class="col-sm-3 col-form-label">Apellido materno</label>
        <div class="col-sm-9">
          <%= f.text_field :last_name, class: "form-control" %>
          <div class="invalid-feedback"><%= @user.errors[:last_name].first %></div>
        </div>
      </div>

      <div class="form-group row">
        <label for="exampleInputName" class="col-sm-3 col-form-label">Usuario</label>
        <div class="col-sm-9">
          <%= f.text_field :username, class: "form-control", required: true %>
          <div class="invalid-feedback"><%= @user.errors[:username].first %></div>
        </div>
      </div>

      <div class="form-group row">
        <label for="exampleInputName" class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-9">
          <%= f.text_field :email, class: "form-control", required: true %>
          <div class="invalid-feedback"><%= @user.errors[:email].first %></div>
        </div>
      </div>

      <% if @minimum_password_length %>
      <% hint = "#{@minimum_password_length} carácteres mínimo." %>
      <% end %>

      <div class="form-group row">
        <label for="exampleInputName" class="col-sm-3 col-form-label">Contraseña</label>
        <div class="col-sm-9">
          <%= f.password_field :password, class: "form-control" %>
          <div class="invalid-feedback"><%= @user.errors[:password].first %></div>
          <small class="form-text text-muted"><%= "(#{hint}), (Dejar en blanco si no desea cambiarla) " %> </small>
        </div>
      </div>

      <div class="form-group row">
        <label for="exampleInputName" class="col-sm-3 col-form-label">Confirmación de contraseña</label>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, class: "form-control" %>
          <div class="invalid-feedback"><%= @user.errors[:password_confirmation].first %></div>
          <small class="form-text text-muted">(Dejar en blanco si no desea cambiarla)</small>
        </div>
      </div>

      <% if current_user.admin? %>
      <div class="form-group row">
        <label for="exampleInputName" class="col-sm-3 col-form-label">Rol</label>
        <div class="col-sm-9">
          <%= f.collection_select :rol_id, Rol.all, :id, :name, { prompt: "" }, class: "form-control", required: true %>
          <div class="invalid-feedback"><%= @user.errors[:rol].first %></div>
        </div>
      </div>
      <% end %>

      <div class="row">
        <div class="col-md-6 offset-md-3">
          <%= f.submit "Actualizar usuario", class: "btn btn-primary" %>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>
