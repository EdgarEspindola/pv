<%= form_tag(search_equipment_customers_path, role: "search", method: :get) do %>
  <div class="form-row">
    <div class="form-group col-md-5">
      <label>Nombre del cliente</label>
      <% if @equipment_customer.present? %>
        <% clients = [@equipment_customer.client] %>
      <% else %>
        <% clients = [] %>
      <% end %>
      <%= select_tag "[search][client_id]", options_from_collection_for_select(clients, "id", "name", @equipment_customer ? @equipment_customer.client_id : nil), prompt: "Seleccione un cliente", class: "form-control autocomplete_clients", required: true %>
    </div>
    <div class="form-group col-md-5">
      <label>NÃºmero de Folio</label>
      <%= text_field_tag "[search][folio_number]", @equipment_customer ? @equipment_customer.folio : nil, class: "form-control", required: true %>
    </div>
    <div class="form-group col-md-2 d-flex align-items-end">
    	<button class="btn btn-outline-success btn-search form-control" type="submit">
    		<i class="fas fa-search"></i>
    		Buscar
  		</button>
    </div>
  </div>
<% end %>

