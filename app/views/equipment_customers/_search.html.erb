<div class="row">
  <div class="col-md-12">
    <!-- Custom Tabs -->
    <div class="nav-tabs-custom">
      <ul class="nav nav-tabs">
        <li class="<%= 'active' if !@from_create_action.present? %>"><a href="#tab_1" data-toggle="tab">BÃºsqueda de Equipos</a></li>
        <li class="<%= 'active' if @from_create_action.present? %>"><a href="#tab_2" data-toggle="tab">Agregar Equipos</a></li>     
      </ul>
      <div class="tab-content">
        <div class="tab-pane <%= 'active' if !@from_create_action.present? %>" id="tab_1">
          <div class="row">        
            <div class="col-md-12">                  
              <%= render "equipment_customers/search_form" %>
              <%= render @equipment_customer if @equipment_customer.present? %>

              <div class="box box-solid">
                <div class="box-header with-border">
                  <h3 class="box-title">Historico de Soportes</h3>     
                  <% if @equipment_customer.present? %>            
                    <%= link_to "#", id: "add_new_support_form_link" do %>
                      <i class="fa fa-fw fa-plus-square pull-right" style="font-size: 2.2rem;"></i>
                    <% end %>
                  <% end %>
                 

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  <div class="box-group" id="accordion">   
                    <%= render "supports/new" if @equipment_customer.present? %>
                    <%= render @equipment_customer.supports if @equipment_customer.present? %>
                  </div>
                </div>
                <!-- /.box-body -->
              </div>  

            </div>              
          </div>
        </div>
        <!-- /.tab-pane -->
        <div class="tab-pane <%= 'active' if @from_create_action.present? %>" id="tab_2">
          <%= render "equipment_customers/form" %>
        </div>
        <!-- /.tab-pane -->

      </div>
      <!-- /.tab-content -->
    </div>
    <!-- nav-tabs-custom -->
  </div>
  <!-- /.col -->
</div>

<script>
  $(document).ready(function() {
    $("#add_new_support_form_link").click(function() {      
      var $formSupport = $($("#form_new_support_div")[0]).clone();   
      $linkCollapse = $($formSupport.find("#link_collapse")[0]);
      $bodyCollapse = $($formSupport.find("#collapseOne")[0]);
      var snapshot = (new Date()).getTime();
      $linkCollapse.attr("href", ("#" + String(snapshot)));
      $bodyCollapse.attr("id", String(snapshot));
      $("#accordion").prepend($formSupport.html());
      return false;
    });
  });
</script>