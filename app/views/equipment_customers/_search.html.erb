          <%= render 'equipment_customers/search_form' %>
          <%= render @equipment_customer if @equipment_customer.present? %>
          <h5 class="card-title <%= 'd-none' if @equipment_customer.blank? %>">Historico de Soportes</h5>

          <div class="accordion" id="accordionExample">
            <%= render 'supports/new' if @equipment_customer.present? %>
          </div>
        </div>

        <div class="tab-pane fade <%= "#{'active' if @from_create_action.present?} #{'show' if @from_create_action.present?}" %>" id="equipment_customer_div">
          <%= render 'equipment_customers/form' %>
        </div>
      </div>
    </div>
  </div>
</div>
