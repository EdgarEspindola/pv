<div id="my-box">
<button class="box-header with-border accordion_new">
  <h3 class="box-title">[Nuevo Equipo]</h3>
</button>
<div class="panel">
  <div class="row">
    <%= render 'equipment_customers/form', new_equipment_customer: @new_equipment_customer, service: @service %>
  </div>
</div>
</div>

<script>
  $(document).ready(function() {
    var acc = document.getElementsByClassName("accordion_new");
    var i;

    for (i = 0; i < acc.length; i++) {
      acc[i].addEventListener("click", function() {
        this.classList.toggle("active");
        var panel = this.nextElementSibling;
        if (panel.style.height){
          panel.style.height = null;
        } else {
          panel.style.height = panel.scrollHeight + 200 + "px";
        }
      });

      acc[i].click();
    }

  });
</script>
