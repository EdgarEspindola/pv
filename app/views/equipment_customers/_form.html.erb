<%= form_for(new_equipment_customer) do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label>Cliente</label>
      <%= f.collection_select :client_id, [], :id, :name, { prompt: "Seleccione un cliente" }, class: "form-control autocomplete_clients", required: true %>
      <div class="has-error"><%= new_equipment_customer.errors[:client_id].first %></div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group <%= 'has-error' unless new_equipment_customer.errors[:folio].blank? %>">
      <label>Folio Nota</label>
      <%= f.text_field :folio, class: "form-control", required: true %>
      <div class="help-block"><%= new_equipment_customer.errors[:folio].first %></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label>Equipo</label>
      <%= f.collection_select :equipment_id, [], :id, :name, { prompt: "Seleccione un equipo" }, class: "form-control autocomplete_equipments", required: true %>
      <div class="invalid-feedback"><%= new_equipment_customer.errors[:equipment_id].first %></div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <label>Marca:</label>
      <%= f.collection_select :brand_id, [], :id, :name, { prompt: "Seleccione una marca" }, class: "form-control autocomplete_brands", required: true %>
      <div class="invalid-feedback"><%= new_equipment_customer.errors[:brand_id].first %></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <label>Descripci√≥n:</label>
      <%= f.text_area :description, class: "form-control textarea_new_equipment_customer", rows: 2, required: true %>
      <div class="invalid-feedback"><%= new_equipment_customer.errors[:description].first %></div>
    </div>
  </div>
</div>

<%= f.submit "Guardar", class: "btn btn-primary" %>
<% end %>
