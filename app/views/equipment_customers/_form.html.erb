<%= form_for(@new_equipment_customer) do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label class="font-weight-bold col-form-label col-form-label-sm">Cliente:</label>
      <%= f.collection_select :client_id, Client.all, :id, :name, { prompt: "Seleccione un cliente" }, class: "form-control form-control-sm", required: true %>
      <div class="invalid-feedback"><%= @new_equipment_customer.errors[:client_id].first %></div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <label class="font-weight-bold col-form-label col-form-label-sm">Folio Nota: </label>
      <%= f.text_field :folio, class: "form-control form-control-sm", required: true %>
      <div class="invalid-feedback"><%= @new_equipment_customer.errors[:folio].first %></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label class="font-weight-bold col-form-label col-form-label-sm">Equipo:</label>
      <%= f.collection_select :equipment_id, Equipment.all, :id, :name, { prompt: "Seleccione un equipo" }, class: "form-control form-control-sm", required: true %>
      <div class="invalid-feedback"><%= @new_equipment_customer.errors[:equipment_id].first %></div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <label class="font-weight-bold col-form-label col-form-label-sm">Marca:</label>
      <%= f.collection_select :brand_id, Brand.all, :id, :name, { prompt: "Seleccione una marca" }, class: "form-control form-control-sm", required: true %>
      <div class="invalid-feedback"><%= @new_equipment_customer.errors[:brand_id].first %></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <label class="font-weight-bold col-form-label col-form-label-sm">Descripci√≥n:</label>
      <%= f.text_area :description, class: "form-control form-control-sm", rows: 2, required: true %>
      <div class="invalid-feedback"><%= @new_equipment_customer.errors[:description].first %></div>
    </div>
  </div>
</div>

<%= f.submit "Guardar", class: "btn btn-primary" %>
<% end %>
